<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>

    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheetdialog</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppTheme.Actionbar" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="toolbar" parent="">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:tint">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonstyle">
        <item name="android:background">@color/purple_700</item>
    </style>
    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/colorLightgray</item>
        <item name="colorControlActivated">@color/colorbutton</item>
        <item name="android:colorForeground">@color/colorLightgray</item>
    </style>

</resources>