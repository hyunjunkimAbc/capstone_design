<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/placemapitemclick"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:background="@drawable/bottomsheetdialog"
    android:backgroundTint="@color/white"
    android:foreground="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/recycleritemmapimg"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plusprofileimg" />

    <TextView
        android:id="@+id/recycleritemmaptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleritemmapimg" />

    <TextView
        android:id="@+id/placemapaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleritemmaptitle" />

    <View
        android:id="@+id/viewline52"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/placemapcategorybox"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/placemapcategorybox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="#f0f0f0"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/recycleritemmapgoodcount"
        app:layout_constraintTop_toBottomOf="@+id/textView74">

        <TextView
            android:id="@+id/placemapcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="카테고리"
            android:textSize="15dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textView74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="긍정리뷰 수 :"
        android:textColor="#36DA90"
        app:layout_constraintEnd_toStartOf="@+id/recycleritemmapgoodcount"
        app:layout_constraintTop_toBottomOf="@+id/recycleritemmapimg" />

    <TextView
        android:id="@+id/recycleritemmapgoodcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:text="10"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleritemmapimg" />
</androidx.constraintlayout.widget.ConstraintLayout>