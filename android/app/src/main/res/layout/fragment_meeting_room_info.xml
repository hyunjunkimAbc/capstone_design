<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeetingRoomInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/meetingRoomTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/affiliated_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="관심지역" />

                <TextView
                    android:id="@+id/numOfPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="n(현재 인원)/m(최대 인원)" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="category" />

            </LinearLayout>

            <ImageView
                android:id="@+id/meetingInfoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_foreground"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/uploadTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="uploadTime" />

            <TextView
                android:id="@+id/meetingRoomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="meetingRoomText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/meetingMembersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>