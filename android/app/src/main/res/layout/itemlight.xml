<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lightclick"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lightitemimg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/plusprofileimg"
        />
    <TextView
        android:id="@+id/lightitemtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/lightitemimg"
        android:text="TextView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/lightitemcard2"
        android:layout_toEndOf="@+id/lightitemtitle"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="#f0f0f0"
        app:cardCornerRadius="5dp"
        >
        <TextView
            android:id="@+id/lightitemnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:text="2"
            android:textSize="15dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/lightitemcard"
        android:layout_below="@+id/lightitemtitle"
        android:layout_toRightOf="@+id/lightitemimg"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="#f0f0f0"
        app:cardCornerRadius="5dp"
       >
    <TextView
        android:id="@+id/lightitemcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:text="카테고리"
        android:textSize="15dp"
        />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/lightitemdday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightitemtitle"
        android:layout_toRightOf="@+id/lightitemcard"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="8dp"
        android:text="D-DAY"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/lightitemstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightitemtitle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/lightitemdday"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lightitemtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightitemtitle"
        android:layout_toRightOf="@+id/lightitemstart"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="8dp"
        android:text="~"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/lightitemend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightitemtitle"
        android:layout_toRightOf="@+id/lightitemtext"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="8dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/lightitemaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightitemcard"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/lightitemimg"
        android:text="경기도 의왕시"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lightitemaddressname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightitemcard"
        android:layout_toRightOf="@+id/lightitemaddress"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="8dp"
        android:text="장소이름"
        android:textStyle="bold"
        android:textSize="14sp"
        />

    <View
        android:id="@+id/view"
        android:layout_below="@+id/lightitemimg"
        android:layout_width="wrap_content"
        android:background="#f0f0f0"
        android:layout_marginTop="10dp"
        android:layout_height="2dp" />

</RelativeLayout>