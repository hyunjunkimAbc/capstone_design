<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:id="@+id/linearLayoutConciergeContain"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/bottomsheetdialog"
    >


    <ImageView
        android:id="@+id/conciergeImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />
    <TextView
        android:layout_below="@+id/conciergeImageView"
        android:id="@+id/conciergeTextView"
        android:layout_width="130dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="TextView" />
    <TextView
        android:layout_below="@+id/conciergeInfoText"
        android:id="@+id/conciergeInfoText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:text="-------------------" />
    <View
        android:id="@+id/viewline5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/transparent"
        android:layout_below="@id/conciergeInfoText2" />
    <TextView
        android:layout_below="@+id/conciergeTextView"
        android:id="@+id/conciergeInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:text="서울 성북구" />
    <androidx.cardview.widget.CardView
        android:id="@+id/conciergeCardView"
        android:layout_below="@+id/conciergeImageView"
       android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f0f0f0"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="15dp"
        >
        <TextView
            android:id="@+id/conciergecategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="카테고리"
            android:textSize="12dp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>