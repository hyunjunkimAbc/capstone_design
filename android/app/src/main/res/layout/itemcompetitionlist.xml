<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/competitionitemclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/competitionitemimg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plusprofileimg" />

        <TextView
            android:id="@+id/competitionitemtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="대회제목"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/competitionitemimg" />

        <androidx.cardview.widget.CardView
            android:id="@+id/competitionbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#f0f0f0"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toEndOf="@+id/competitionitemtitle"
            app:layout_constraintTop_toBottomOf="@+id/competitionitemimg">

            <TextView
                android:id="@+id/competitioncategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="2"
                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/competitionitemgoodcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="10"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/competitionitemimg" />

        <TextView
            android:id="@+id/textView790"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="7dp"
            android:text="긍정리뷰 수 :"
            android:textColor="#36DA90"
            app:layout_constraintEnd_toStartOf="@+id/competitionitemgoodcount"
            app:layout_constraintTop_toBottomOf="@+id/competitionitemimg" />
        <TextView
            android:id="@+id/competitionitemexplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/competitionitemtitle" />
        <TextView
            android:id="@+id/competitionaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/competitionitemexplain" />

        <TextView
            android:id="@+id/competext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="시작 :"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/competitionaddress" />
        <TextView
            android:id="@+id/competitionitemstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="yyyy년mm월dd일hh시mm분"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/competext1"
            app:layout_constraintTop_toBottomOf="@+id/competitionaddress" />
        <TextView
            android:id="@+id/competext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="종료 :"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/competext1" />
        <TextView
            android:id="@+id/competitionitemend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="yyyy년mm월dd일hh시mm분"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/competext2"
            app:layout_constraintTop_toBottomOf="@+id/competitionitemstart" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>